<h3>Editing Book</h3>
<% if @book.errors.any? %>
<h3>error</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_with model:@book, local:true do |f| %>

   <h4>Title</h4>
   <%= f.text_field :title %><br>

   <br><h4>Body</h4>
   <%= f.text_area :body %><br>
   <br><%= f.submit 'Update Book' %><br>
<% end %>

   <br><%= link_to "Show", book_path %>
   |
   <%= link_to "Back", books_path %>