<h3>Books</h3>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
   <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book.id) %></td>
      <td><%= link_to "edit", edit_book_path(book) %></td>
      <td><%= link_to "destroy", book_path(book), "data-confirm" => "Are you sure?", method: :delete %></td>
    </tr>
   <% end %>
  </tbody>
</table>

<h3>New book</h3>
<% if @book.errors.any? %>
<h3>error</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<%= form_with model:@book, local:true do |f| %>

  <%= f.label :Title %><br>
  <%= f.text_field :title %><br>

  <br><%= f.label :Body %><br>
  <%= f.text_area :body %><br>

  <br><%= f.submit ' Create Book' %>

<% end %>